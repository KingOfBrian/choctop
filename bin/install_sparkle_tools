#!/usr/bin/env ruby

require 'rubygems'
require 'rubigen'

if %w(-v --version).include? ARGV.first
  require 'install_sparkle_tools/version'
  puts "#{File.basename($0)} #{InstallSparkleTools::VERSION}"
  exit(0)
end

require 'rubigen/scripts/generate'
source = RubiGen::PathSource.new(:application, 
  File.join(File.dirname(__FILE__), "../app_generators"))
RubiGen::Base.reset_sources
RubiGen::Base.append_sources source
RubiGen::Scripts::Generate.new.run(ARGV, :generator => 'install_sparkle_tools')
puts <<-EOS
You use sparkle_tools with the following rake tasks:
  rake appcast:build   # Create/update the appcast file
  rake appcast:upload  # Upload the appcast file to the server
EOS